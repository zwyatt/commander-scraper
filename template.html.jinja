<!DOCTYPE html>
<link rel="stylesheet" href="styles.css" />
<html lang="en">
<head>
    <title>Commander Deck Prices</title>
</head>
<body>
    <div class="gridcontainer">
        {% for deck in decks %}
        <div>
            <table>
                <tr>
                    <th>{{ deck.set }} - {{ deck.name }}</th>
                </tr>
                <tr>
                    <td><b>Store</b></td>
                    <td><b>Price</b></td>
                    <td><b>Stock</b></td>
                </tr>
                {% for store_deck in deck.store_decks %}
                <tr>
                    <td id="deck"><a href="{{ store_deck.link }}">{{ store_deck.store['name'] }}</a></td>
                    <td id="price">${{ store_deck.price }}</td>
                    {% if store_deck.stock %}
                    <td id="in-stock">In Stock</td>
                    {% else %}
                    <td id="out-stock">Out of Stock</td>
                    {% endif %}
                </tr>
                {% endfor %}
            </table>
            <br>
        </div>
        {% endfor %}
    </div>
</body>
</html>